{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],

  "typedocOptions": {
    "out": "docs",
    "gitRevision": "master",
    "mode": "modules",
    "excludeNotExported": true,
    "readme": "none",
    "theme": "minimal"
  }
}
