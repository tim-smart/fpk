{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],

  "typedocOptions": {
    "out": "docs",
    "gitRevision": "master",
    "readme": "none"
  }
}
